                              <div className="flex-1">
                                <h3 className="text-xl font-bold text-slate-800 mb-1">{job.title}</h3>
                                <p className="text-slate-600 font-medium">{job.company_name}</p>
                                <div className="flex items-center mt-2 text-sm text-slate-500">
